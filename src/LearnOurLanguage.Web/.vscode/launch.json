{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Build",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}\\bin\\Debug\\netcoreapp1.1\\LearnOurLanguage.Web.dll",
            "args": [],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",

            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceRoot}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command.pickProcess}"
        },
        {
            "name": ".NET Core Launch (Web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}\\bin\\Debug\\netcoreapp1.1\\LearnOurLanguage.Web.dll",
            "args": [],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",

            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceRoot}/Views"
            },
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url} --remote-debugging-port=9222",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url} --remote-debugging-port=9222"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                },
                "type": "chrome",
                "webRoot": "${workspaceRoot}/wwwroot/",
                "sourceMaps": true,
                "diagnosticLogging": true,
                "sourceMapPathOverrides": { "webpack:///./angular2App/*": "${workspaceRoot}/angular2App/*" }
            }
        },
        {
            "name": "Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5000",
            "webRoot": "${workspaceRoot}/wwwroot/",
            "sourceMaps": true,
            "diagnosticLogging": true,
            "sourceMapPathOverrides": { "webpack:///./angular2App/*": "${workspaceRoot}/angular2App/*" }
        },
        {
            "name": "Attach Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "url": "http://localhost:5000",
            "webRoot": "${workspaceRoot}/wwwroot/",
            "sourceMaps": true,
            "diagnosticLogging": true,
            "sourceMapPathOverrides": { "webpack:///./angular2App/*": "${workspaceRoot}/angular2App/*" }
        }
    ]
}